{
    "manifest_version": 3,
    "name": "Reliefope Disaster Reporter",
    "version": "1.0",
    "description": "Quickly report disasters to Reliefope platform.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}
